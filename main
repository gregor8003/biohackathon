import kivy
import os
from kivy.properties import NumericProperty, ObjectProperty

from output_location import OutputLocationManager

kivy.require('1.0.6') # replace with your current kivy version !

from kivy.app import App
from kivy.uix.screenmanager import ScreenManager, Screen

class ScreenOne(Screen):
    pass

class ScreenTwo(Screen):
    pass


class Manager(ScreenManager):
    screen_one = ObjectProperty(None)
    screen_two = ObjectProperty(None)

class Archiver(App):

    label_1 = '0'

    input_path = 'C:\Test\Input\data'
    output_path = os.path.abspath(os.path.join('C:\Test\Input'))
    backup_path = os.path.abspath(os.path.join('C:\Test\Input'))

    dupa = OutputLocationManager(input_path, output_path, backup_path)

    print(label_1)
    if dupa:
        label_1 = str(dupa.number_of_samples)

    def method(self):
        a = 1 + 1
        return a

    def build(self):
        return Manager()

if __name__ == '__main__':
    Archiver().run()
